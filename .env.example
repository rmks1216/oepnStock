# oepnStock Configuration Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/oepnstock
REDIS_URL=redis://localhost:6379/0

# API Keys (Korean Stock Market)
KIWOOM_API_KEY=your_kiwoom_api_key_here
KOREA_INVESTMENT_API_KEY=your_korea_investment_api_key_here
DATA_PROVIDER_API_KEY=your_data_provider_api_key_here

# Logging Configuration  
LOG_LEVEL=INFO
LOG_FILE=logs/oepnstock.log

# Safety Settings
PAPER_TRADING=true
MAX_DAILY_LOSS=0.05

# Development Settings
DEBUG=false
TESTING=false

# Notification Settings (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password